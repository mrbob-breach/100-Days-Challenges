import turtle
from turtle import Turtle, Screen
import random

nori = Turtle("turtle")
gondor = Turtle("turtle")
twilight = Turtle("turtle")
mishu = Turtle("turtle")
misty = Turtle("turtle")
arwen = Turtle("turtle")

is_race_on = False
screen = Screen()
screen.setup(500, 400)
user_bet = screen.textinput("Make your bet", "Which cat will win the race? Enter a name: ").lower()

colors = ["black", "gray0", "grey", "brown", "mistyrose4", "orange"]
cats = [nori, gondor, twilight, mishu, misty, arwen]
first_cat_start = -125
first_cat_color = 0

for cat in cats:
    cat.penup()
    cat.color(colors[first_cat_color])
    cat.goto(-230, first_cat_start)
    first_cat_start += 50
    first_cat_color += 1

if user_bet:
    is_race_on = True

while is_race_on:

    for cat in cats:
        if cat.xcor() > 230:
            is_race_on = False
            if cat == user_bet:
                print(f"You've won! {cat} is the winner!")
            else:
                print(f"You've lost! {cat} is the winner!")

        rand_distance = random.randint(0, 10)
        cat.forward(rand_distance)

screen.exitonclick()
